<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    android:id="@+id/container_newpost"
    android:visibility="invisible"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container_title"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Post to Redcupa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_newpost_send"
            android:background="@drawable/ic_menu_send"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/container_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_newpost_postcontent"
            android:textSize="20sp"
            android:hint="Tell the world"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_eventpic_postscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_prompt_camera"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_camera"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_prompt_gallery"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
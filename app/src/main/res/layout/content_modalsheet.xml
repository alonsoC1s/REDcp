<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    app:behavior_hideable="true"
    app:behavior_peekHeight="55dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <android.support.v7.widget.CardView
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="#ffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:id="@+id/tv_modalsheet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="25dp"
                android:textColor="#000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/header_container"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/card_authorPic"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/card_authorName"
                    android:layout_marginLeft="5dp"
                    android:text="Author name"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_modalsheet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Content"
                android:maxHeight="250dp"
                />


            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_eventdetails_fav"
                android:background="@drawable/ic_favorite_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_eventdetails_share"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_eventdetails_invite"
                android:background="@drawable/ic_person_add"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_eventdetails_more"
                android:layout_gravity="right"
                android:gravity="right"
                android:background="@drawable/ic_more_vert"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_goto_eventdetails"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See event details..." />
            </LinearLayout>


        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
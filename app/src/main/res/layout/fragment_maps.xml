<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:id="@+id/mapfragment_coordinator_layout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_create_event"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/bottomSheetLayout"
        app:layout_anchorGravity="top|end"
        android:elevation="20dp"
        android:src="@drawable/button_add" />

    <include layout="@layout/content_map_layout" />
    <include layout="@layout/content_modalsheet" />

</android.support.design.widget.CoordinatorLayout>